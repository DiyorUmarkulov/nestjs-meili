{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationDir": "./dist/cjs/types",
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
